/* pages/quiz/home/index.wxss */
.quizPage{
 padding-top: 8vh;
  padding-bottom: 20rpx;
  overflow: hidden;
  overflow-y:hidden;
  height: 100%;
}
.upPage {
  padding-top: 8vh;
  padding-bottom: 7vw;
}

.kindtitle {
  font-size: 70rpx;
  font: bold;
  padding-top: 5vw;
  text-align: center;
  margin-bottom: 7vw;
}

.grade {
  margin-left: 10%;
  float: left;
  text-align: center;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  background: #e2e2e234;
  border-style: solid;
  border-width: 3rpx;
  border-color: #b3b3b369;
  box-shadow: 8rpx 8rpx 10rpx #c9c9c91e;
}

.time {
  margin-right: 10%;
  float: right;
  text-align: center;
  border-radius: 30rpx;
  font-size: 27rpx;
  font: bold;
  padding: 10rpx 30rpx;
  background: #e2e2e21c;
  border-style: solid;
  border-width: 3rpx;
  border-color: #b3b3b369;
 box-shadow: 8rpx 8rpx 10rpx #c9c9c91e;
}

.padding {
  padding-top: 26vh;
}

.testWordArea {
  margin-top: 5vh;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  display: flex;

}

.testWord {
  width: 60vw;
  margin-bottom: 40rpx;
  border-radius: 500rpx;
  border-style: solid;
  border-width: 3rpx;
  border-color:#cccccc;
  height: 10vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align:center;
  font-size:40rpx;
  letter-spacing: 4;
  transition:width 100ms;
  transition-timing-function: ease-out;
  position: relative;
  box-shadow: 8rpx 8rpx 10rpx #c9c9c967;
}



.testWordhover{
  width: 67vw;
  transition:width 150ms;
  transition-timing-function: ease-in;
  

}

.text-center {
  width: auto;
  align-content: center;
  height: auto;
  font: bold;
}



